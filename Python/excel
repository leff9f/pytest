import xlwt
from datetime import datetime

import os

font0 = xlwt.Font()
font0.name = 'Times New Roman'
font0.colour_index = 20
font0.bold = True

style0 = xlwt.XFStyle()
style0.font = font0

style1 = xlwt.XFStyle()
style1.num_format_str = 'D-MMM-YY'

wb = xlwt.Workbook()
ws = wb.add_sheet('Test')

ws.write(0, 0, 'Test', style0)
ws.write(1, 0, datetime.now(), style1)

wb.save(os.path.abspath("D:\example.xls"))
